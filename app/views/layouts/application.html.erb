<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> - Quodit</title>
    <%= stylesheet_link_tag :all %>
	<link href='http://fonts.googleapis.com/css?family=Raleway:100' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag :defaults, 'jquery', 'jquery.textSelect', 'jquery.tagify', 'jquery.json-2.2.min' %>
    <%= csrf_meta_tag %>
  </head>
  <body class="<%= "#{params[:controller]}-#{params[:action]}"%>">

    <div id="fb-root"></div>

	<%= render 'shared/headbar' %>
  
	<div id="center_column">
	  
		<% if flash[:notice] %>
		  <div id="notice">
		<%= flash[:notice] %>
		  </div>
		<% end %>

		<%= yield %>
	
	</div>
    
  </body>
</html>
